'use client';
export const dynamic = 'force-dynamic';

import { useEffect, useState } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';

interface AuditOp {
  id: string;
  timestamp: string;
  user: string;
  operationType: string;
  resource: string;
  action: string;
  result: 'success' | 'error';
  details: any;
}

export default function AuditPage() {
  const [operations, setOperations] = useState<AuditOp[]>([]);
  const [selected, setSelected] = useState<AuditOp | null>(null);
  const [loading, setLoading] = useState(true);
  const [filters, setFilters] = useState({
    user: '',
    type: '',
    status: '',
  });

  useEffect(() => {
    fetchData();
  }, [filters]);

  const fetchData = async () => {
    try {
      const params = new URLSearchParams();
      if (filters.user) params.append('user', filters.user);
      if (filters.type) params.append('type', filters.type);
      if (filters.status) params.append('status', filters.status);

      const res = await fetch(`/api/admin/operations?${params.toString()}`);
      const data = await res.json();
      setOperations(data.data || []);
    } catch (error) {
      console.error('Error', error);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="space-y-6 p-6">
      <div>
        <h1 className="text-4xl font-bold">üìã Audit Trails</h1>
        <p className="text-gray-600 mt-2">Operation history with filtering and analytics</p>
      </div>

      <Card className="p-6">
        <h3 className="font-bold mb-4">üîç Filters</h3>
        <div className="grid grid-cols-3 gap-4">
          <input
            type="text"
            placeholder="User"
            value={filters.user}
            onChange={(e) => setFilters({ ...filters, user: e.target.value })}
            className="border rounded px-3 py-2"
          />
          <input
            type="text"
            placeholder="Type"
            value={filters.type}
            onChange={(e) => setFilters({ ...filters, type: e.target.value })}
            className="border rounded px-3 py-2"
          />
          <select
            value={filters.status}
            onChange={(e) => setFilters({ ...filters, status: e.target.value })}
            className="border rounded px-3 py-2"
          >
            <option value="">All</option>
            <option value="success">‚úÖ Success</option>
            <option value="error">‚ùå Error</option>
          </select>
        </div>
      </Card>

      {loading ? (
        <Card className="p-6 text-center"><div>‚è≥ Loading...</div></Card>
      ) : (
        <>
          <Card>
            <CardHeader>
              <CardTitle>Operations ({operations.length})</CardTitle>
            </CardHeader>
            <CardContent>
              <div className="overflow-x-auto">
                <table className="w-full text-sm">
                  <thead className="bg-gray-50">
                    <tr>
                      <th className="text-left py-2 px-4">Time</th>
                      <th className="text-left py-2 px-4">User</th>
                      <th className="text-left py-2 px-4">Type</th>
                      <th className="text-left py-2 px-4">Resource</th>
                      <th className="text-left py-2 px-4">Result</th>
                      <th className="text-left py-2 px-4">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {operations.slice(0, 50).map((op) => (
                      <tr key={op.id} className="border-b hover:bg-gray-50">
                        <td className="py-2 px-4 text-xs">{new Date(op.timestamp).toLocaleString()}</td>
                        <td className="py-2 px-4">{op.user}</td>
                        <td className="py-2 px-4">
                          <span className="px-2 py-1 bg-blue-100 text-blue-700 rounded text-xs font-bold">
                            {op.operationType}
                          </span>
                        </td>
                        <td className="py-2 px-4 text-xs font-mono">{op.resource}</td>
                        <td className="py-2 px-4">
                          <span
                            className={`px-2 py-1 rounded text-xs font-bold ${
                              op.result === 'success'
                                ? 'bg-green-100 text-green-700'
                                : 'bg-red-100 text-red-700'
                            }`}
                          >
                            {op.result}
                          </span>
                        </td>
                        <td className="py-2 px-4">
                          <button
                            onClick={() => setSelected(op)}
                            className="text-blue-600 hover:underline text-xs font-medium"
                          >
                            View
                          </button>
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            </CardContent>
          </Card>

          {selected && (
            <Card className="p-6 border-blue-500 border-2">
              <div className="flex justify-between items-center mb-4">
                <h3 className="font-bold text-lg">
                  {selected.operationType} - {selected.resource}
                </h3>
                <button onClick={() => setSelected(null)} className="text-gray-600 hover:text-gray-800">
                  ‚úï
                </button>
              </div>

              <div className="grid grid-cols-2 gap-4 mb-4">
                <div>
                  <span className="text-sm font-medium text-gray-600">User:</span>
                  <p className="font-semibold">{selected.user}</p>
                </div>
                <div>
                  <span className="text-sm font-medium text-gray-600">Result:</span>
                  <p className={`font-semibold ${selected.result === 'success' ? 'text-green-600' : 'text-red-600'}`}>
                    {selected.result}
                  </p>
                </div>
                <div>
                  <span className="text-sm font-medium text-gray-600">Type:</span>
                  <p className="font-semibold">{selected.operationType}</p>
                </div>
                <div>
                  <span className="text-sm font-medium text-gray-600">Action:</span>
                  <p className="font-semibold">{selected.action}</p>
                </div>
              </div>

              <div>
                <span className="text-sm font-medium text-gray-600 block mb-2">Details:</span>
                <pre className="bg-gray-900 text-green-400 p-4 rounded font-mono text-xs max-h-64 overflow-y-auto">
                  {JSON.stringify(selected.details, null, 2)}
                </pre>
              </div>
            </Card>
          )}
        </>
      )}
    </div>
  );
}
